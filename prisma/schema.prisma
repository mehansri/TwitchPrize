generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For email/password authentication
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  payments      Payment[]
  prizeClaims   PrizeClaim[]
  adminNotifications AdminNotification[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Payment {
  id                  String   @id @default(cuid())
  stripePaymentIntentId String @unique
  amount              Int
  currency            String
  status              String
  userId              String
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  prizeClaim PrizeClaim? // One payment can have one prize claim
}

model PrizeType {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  value       Int      // Value in cents
  glow        String   // gold, blue, green, purple
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  prizeClaims PrizeClaim[]
}

model PrizeClaim {
  id          String   @id @default(cuid())
  userId      String
  paymentId   String   @unique // One-to-one with payment
  prizeTypeId String?
  status      PrizeStatus @default(PENDING_ADMIN_OPEN)
  openedBy    String?  // Admin user ID who opened the prize
  openedAt    DateTime?
  notes       String?  // Admin notes about the prize
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user      User      @relation(fields: [userId], references: [id])
  payment   Payment   @relation(fields: [paymentId], references: [id])
  prizeType PrizeType? @relation(fields: [prizeTypeId], references: [id])
  adminNotifications AdminNotification[]
}

model AdminNotification {
  id          String   @id @default(cuid())
  type        NotificationType
  title       String
  message     String
  userId      String?  // Related user if applicable
  prizeClaimId String? // Related prize claim if applicable
  isRead      Boolean  @default(false)
  readAt      DateTime?
  createdAt   DateTime @default(now())

  user      User?      @relation(fields: [userId], references: [id])
  prizeClaim PrizeClaim? @relation(fields: [prizeClaimId], references: [id])
}

enum PrizeStatus {
  PENDING_ADMIN_OPEN  // User paid, waiting for admin to open prize
  OPENED              // Admin opened the prize
  DELIVERED           // Prize has been delivered to user
  CANCELLED           // Prize claim was cancelled
}

enum NotificationType {
  NEW_PAYMENT         // New payment received
  PRIZE_OPENED        // Prize was opened by admin
  PRIZE_DELIVERED     // Prize was delivered
  PAYMENT_FAILED      // Payment failed
  SYSTEM_ALERT        // System alert
}
